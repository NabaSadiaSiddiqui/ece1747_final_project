
package com.ece1747.serialized;

import java.io.*;

public class Decoder {

	public Decoder() {
		
	}

	/**
	 * 
	 * @param args
	 * Input file into the system containing the log file for decoding.
	 */
	public static void main(String[] args) throws IOException{
		// Check if args are valid, if not exit.
		if (args[0] == null)
		{
			System.out.print("No valid file. Exiting");
			return;
		}
		
		// Module has a valid file.
		System.out.print("Log File: " + args[0]);
		
		// Setup I/O
		int c;
		FileInputStream in = null;
		FileOutputStream out = null;
		
		try
		{
			// Make input / output streams and start reading the log file.
			in = new FileInputStream(args[0]);
			out = new FileOutputStream("serialized_out.csv");
			
			while ((c = in.read()) != -1)
			{
			
			}
		}
		finally
		{
			if (in != null)
				in.close();
			
			if (out != null)
				out.close();
		}
		
	}
}
